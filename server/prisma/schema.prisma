generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(cuid())
  name         String
  email        String     @unique
  passwordHash String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  profiles     Profile[]
}

model Profile {
  id            String         @id @default(cuid())
  name          String
  cpf           String
  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  beneficiaries Beneficiary[]
}

enum Program {
  LATAM
  SMILES
  AZUL
}

enum Status {
  UTILIZADO
  LIBERADO
  PENDENTE
}

model Beneficiary {
  id            String    @id @default(cuid())
  profileId     String
  program       Program
  name          String
  cpf           String
  issueDate     DateTime
  changeDate    DateTime?
  previousName  String?
  previousCpf   String?
  previousDate  DateTime?
  status        Status    @default(UTILIZADO)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  profile       Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([profileId, program, cpf])
  @@index([profileId, program])
}
